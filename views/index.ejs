<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anime Movies Review</title>
    <link rel="stylesheet" href="/public/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <!-- header -->
    <header>
        <h1>Movie <span>Otaku</span></h1>
        <p>Discover, review, and explore the Best of Anime Movies</p>
    </header>

    <!-- navigation -->
    <nav id="main-nav">
        <ul>
            <li><a href="#featured">Featured Reviews</a></li>
            <li><a href="/reviews">All Reviews</a></li>
            <li><a href="#anime-news">Anime News</a></li>
            <li><a href="#top-rated">Top Rated</a></li>
        </ul>
    </nav>

    <!-- featured-reviews -->
    <section id="featured">
        <h2>Featured Reviews</h2>
        <% movies.forEach(movie=> { %>
            <article class="featured-article" style="background-image: url('/Assets/<%= movie.bgImage %>')">
                <img src="/Assets/<%= movie.image %>" alt="<%= movie.title %> movie poster" />
                <div class="info">
                    <h3>
                        <%= movie.title %> (<%= movie.year %>)
                    </h3>
                    <div class="rating">
                        <% for(let i=0; i < Math.floor(movie.rating); i++) { %>
                            <i class="fas fa-star"></i>
                            <% } %>
                                <% if (movie.rating % 1>= 0.5) { %>
                                    <i class="fas fa-star-half-alt"></i>
                                    <% } %>
                                        <% for(let i=0; i < 5 - Math.ceil(movie.rating); i++) { %>
                                            <i class="far fa-star"></i>
                                            <% } %>
                    </div>
                    <p>
                        <%= movie.description %>
                    </p>
                    <div class="buttons">
                        <a href="/review/<%= movie.id %>">Write a Review</a>
                        <a href="/reviews">See All Reviews</a>
                    </div>
                </div>
            </article>
            <% }); %>
    </section>

    <!-- Include other sections from your HTML as needed -->

    <!-- footer -->
    <footer>
        <p>&copy; TinAungOo</p>
        <ul>
            <li><a href="https://facebook.com" target="_blank" rel="noopener noreferrer"><i
                        class="fab fa-facebook"></i></a></li>
            <li><a href="https://twitter.com" target="_blank" rel="noopener noreferrer"><i
                        class="fab fa-twitter"></i></a></li>
            <li><a href="https://instagram.com" target="_blank" rel="noopener noreferrer"><i
                        class="fab fa-instagram"></i></a></li>
            <li><a href="https://myanimelist.net" target="_blank" rel="noopener noreferrer"><i
                        class="fas fa-dragon"></i></a></li>
        </ul>
    </footer>
    <script src="/public/js/script.js"></script>
</body>

</html>
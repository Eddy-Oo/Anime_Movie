<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anime Movie Reviews</title>
    <link rel="stylesheet" href="/public/css/styles.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body>
    <header>
        <h1>Movie <span>Otaku</span></h1>
        <p>Discover the Best Anime Movies</p>
    </header>

    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/reviews">All Reviews</a></li>
        </ul>
    </nav>

    <main>
        <section class="movies-container">
            <% movies.forEach(movie=> { %>
                <div class="movie-card">
                    <img src="<%= movie.image %>" alt="<%= movie.title %>">
                    <div class="movie-info">
                        <h3>
                            <%= movie.title %> (<%= movie.year %>)
                        </h3>
                        <div class="rating">
                            <% for(let i=0; i < 5; i++) { %>
                                <% if(i < Math.floor(movie.rating)) { %>
                                    <i class="fas fa-star"></i>
                                    <% } else if (i===Math.floor(movie.rating) && movie.rating % 1 !==0) { %>
                                        <i class="fas fa-star-half-alt"></i>
                                        <% } else { %>
                                            <i class="far fa-star"></i>
                                            <% } %>
                                                <% } %>
                        </div>
                        <p>
                            <%= movie.description %>
                        </p>
                    </div>
                </div>
                <% }); %>
        </section>
    </main>

    <footer>
        <p>&copy; 2023 Movie Otaku</p>
        <div class="social-links">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </footer>
    <script src="/public/js/script.js"></script>
</body>

</html>

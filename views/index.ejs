<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movie Otaku</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/index.css" />
</head>

<body>
    <header>
        <div id="headerdiv">
            <h1>Movie <span>Otaku</span></h1>
            <p>A Haven For Anime Movie Enthusiasts.</p>
        </div>
        <div id="headerNav">
            <a id="moviesNav" href="/">List Movies</a>
            <a id="reviewsNav" href="/reviews">All Reviews</a>
        </div>
    </header>

    <section id="movies">
        <% movies.forEach(movie=> { %>
            <div class="movie">
                <img src="<%= movie.photo %>" alt="<%= movie.title %>" />
                <div class="infoDiv">
                    <h3 class="title">
                        <%= movie.title %> (<%= movie.year %>)
                    </h3>
                    <div class="rating">
                        <% for(let i=0; i < 5; i++) { %>
                            <% if(i < Math.floor(movie.rating)) { %>
                                <i class="fas fa-star"></i>
                                <% } else if (i===Math.floor(movie.rating) && movie.rating % 1 !==0) { %>
                                    <i class="fas fa-star-half-alt"></i>
                                    <% } else { %>
                                        <i class="far fa-star"></i>
                                        <% } %>
                                            <% } %>
                    </div>
                    <p class="description">
                        <%= movie.description %>
                    </p>
                    <a class="view" href="/review/<%= movie.id %>">View Reviews</a>
                </div>
            </div>
            <% }) %>
    </section>
    <footer>
        <p>&copy; 2025 Movie Otaku</p>
    </footer>
</body>
</html>

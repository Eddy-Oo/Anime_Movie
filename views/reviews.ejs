<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Reviews - Movie Otaku</title>
    <link rel="stylesheet" href="/public/css/styles.css" />
  </head>
  <body>
    <header>
      <div id="headerdiv">
        <h1>Movie <span>Otaku</span></h1>
        <p>All Anime Movie Reviews</p>
      </div>
      <div id="headerNav">
        <a id="moviesNav" href="/">List Movies</a>
        <a id="reviewsNav" href="/reviews">All reviews</a>
      </div>
    </header>
    <h1>All Reviews</h1>
    <% movies.forEach(movie => { %>
    <div class="reviewDiv">
      <h2>Reviews for <%= movie.title %> (<%= movie.year %>)</h2>
      <% reviews.forEach(review => { %> <% if (Number(review.id) === movie.id) {
      %>
      <div class="review">
        <p class="name"><%= review.name %></p>
        <p class="text"><%= review.text %></p>
      </div>
      <% } %> <% }) %>
    </div>
    <% }) %>
    <div class="container">
      <a href="/">Back to Home</a>
    </div>
    <footer>
        <p>&copy; 2023 Movie Otaku</p>
        <div class="social-links">
            <a href="#"><i class="fab fa-facebook"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
        </div>
    </footer>
  </body>
<script src="/public/js/script.js"></script>
</html>
